
@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

@if (Session["Cart"] == null)
{
    <center><h2>Your Cart is Empty</h2></center>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Name </th>
            <th>Price </th>
            <th>Description</th>
            <th>Quantity</th>
        </tr>

        <tr>
            @foreach (var item in Model)
            {

        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>1</td>

        </tr>
        }
            </tr>

        </table>

    }
<td>
    @if (Session["Cart"] != null)
    {
       <center><a href="@Url.Action("ConfirmCart")" class="btn btn-success">Confirm Order</a></center> 
    }
</td>
