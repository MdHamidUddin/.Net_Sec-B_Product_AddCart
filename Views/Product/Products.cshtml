
@{
    ViewBag.Title = "Products";
}



<h2>Products</h2>

<table class="table table-hover">
    <tr>
        <th>Name </th>
        <th>Price </th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Action</th>
    </tr>

    <tr>
        @foreach (var item in Model)
        {
          
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>

            <td>
                <a href="@Url.Action("AddToCart",new { @item.ID})" class="btn btn-success">Add to Cart </a>
      
            </td>

        </tr>
    }
        </tr>

    </table>
